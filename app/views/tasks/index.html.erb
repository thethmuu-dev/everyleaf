<div class="row mt-5">
  <div class="col-md-10 mx-auto">
    <table class="table">
      <thead class="thead-light">
      <tr>
          <th scope="col">Title</th>
          <th scope="col">Status</th>
          <th scope="col">Deadline</th>
          <th scope="col">Details</th>
          <th scope="col">Priority</th>
      </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.status %></td>
            <td><%= task.deadline %></td>
            <td><%= task.details %></td>
            <td><%= task.priority %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
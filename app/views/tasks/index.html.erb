<div class="row mt-5">
  <div class="col-md-10 mx-auto">
    <table class="table">
      <thead class="thead-light">
      <tr>
          <th>Title</th>
          <th>Status</th>
          <th>Deadline</th>
          <th>Details</th>
          <th>Priority</th>
          <th colspan="3">actions</th>
      </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.status %></td>
            <td><%= task.deadline %></td>
            <td><%= task.details %></td>
            <td><%= task.priority %></td>
            <td>
              <%= link_to 'Show', task, class: "card-footer-item" %>
              <%= link_to 'Edit', edit_task_path(task), class: "card-footer-item" %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
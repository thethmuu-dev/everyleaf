<% if @task.errors.any? %> 
  <div id="error_explanation"> 
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this <%= @task.name %> from being saved:</h2> 
    <ul> 
      <% @task.errors.full_messages.each do |message| %> 
        <li><%= message %></li> 
      <% end %> 
    </ul> 
  </div> 
<% end %> 

<div class="card">
  <div class="card-body">
    <h5 class="card-title text-center"><%= title %></h5>
    <%= form_with(model: @task, local: true) do |f| %> 
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control form-control-sm" %> 
      </div>
      <div class="form-group">
        <%= f.label :deadline %>
        <%= f.text_field :deadline, class: "form-control form-control-sm" %> 
      </div>
      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, ['Incompleted', 'In Progress', 'Done'], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :priority %>
        <%= f.text_field :priority, class: "form-control form-control-sm" %> 
      </div>
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details, class: "form-control form-control-sm", row: '6' %> 
      </div>
      <div class="text-center">
        <%= f.submit "Save", class: "btn btn-sm btn-dark" %> 
      </div>
    <% end %>
  </div>
</div>
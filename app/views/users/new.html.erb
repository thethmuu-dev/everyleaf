<div class="row">
  <div class="col-md-5 mx-auto">
    <% if @user.errors.any? %> 
      <div id="error_explanation"> 
        <h5><%= pluralize(@user.errors.count, "error") %> :</h5> 
        <ul> 
          <% @user.errors.full_messages.each do |message| %> 
            <li><%= message %></li> 
          <% end %> 
        </ul> 
      </div> 
    <% end %> 

    <div class="card rounded-0 mt-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title text-center">Sign up</h5>
      
        <%= form_with(model: @user, local: true) do |f| %> 
        <div class="form-group">
          <%= f.label :name %> 
          <%= f.text_field :name, class: "form-control form-control-sm" %> 
        </div>
        <div class="form-group">
          <%= f.label :email %> 
          <%= f.email_field :email, class: "form-control form-control-sm" %> 
        </div>
        <div class="form-group">
          <%= f.label :password %> 
          <%= f.password_field :password, class: "form-control form-control-sm" %> 
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %> 
          <%= f.password_field :password_confirmation, class: "form-control form-control-sm" %> 
        </div>
        <div class="text-center">
          <%= f.submit "Create Account", class: "btn btn-info" %> 
        </div>

      </div>
    </div>
  </div>
</div>
<% end %>
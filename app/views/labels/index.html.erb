<%= link_to 'Add Label', new_label_path, class: "btn btn-sm btn-info" %>

<div class="text-center">
  <h3>Labels</h3>
</div>
<div class="row">
  <div class="col">
    <table class="table table-sm">
      <thead class="thead-dark">
      <tr class="text-center">
          <th>Title</th>
          <th colspan="3">Actions</th>
      </tr>
      </thead>
      <tbody class="text-center">
        <% @labels.each do |label| %>
        <tr>
            <td><%= label.name %></td>
            <td>
              <%= link_to raw("&#10161;"), label, class: "text-dark mr-2" %>
              <%= link_to raw('&#9998;'), edit_label_path(label), class: "text-dark mr-2" %>
              <%= link_to raw("&#10005;"), label, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-dark" %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>